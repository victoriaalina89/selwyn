<!DOCTYPE html>
<html lang="en">
<%- include ("../../noAdmin/partials/head.ejs") %>
<body>
    <div class="text-center">
      <a href="/"><img class="img-logo mt-2 mb-2" src="/images/logo.png" alt="Selwyn"></a>
    </div>
    <hr>

    <div class="container info-container pt-5">
      <div class="d-flex justify-content-end">
        <a href="/logout" class="btn btn-light btn-lg active mb-4" role="button">Logout</a><br />
      </div>
        <h2>Images: </h2>
        <a href="/admin/add-image" class="btn btn-success btn-lg active mt-4 mb-4" role="button">Add new image</a><br />
        <table class="table table-striped">
          <tbody>
            <% images.forEach(function(image){ %>
                <tr>
                  <td class="h5"><%= image.getName() %></td>
                  <td class="h5"><img src="<%= image.getPath() %>" width="200" height="200"></td>
                  <td class="text-right"><a href="#" class="btn btn-danger btn-lg active"
                     data-toggle="modal" data-target="#exampleModal<%= image.getId() %>" role="button">Delete</a></td>    
                  <div class="modal fade" id="exampleModal<%= image.getId() %>"  tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="exampleModalLabel">DELETE CONFIRMATION</h5>
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                          </button>
                        </div>
                        <div class="modal-body">
                          <p>Are you sure you want to delete <%= image.getName() %>?</p>
                          <img src="<%= image.getPath() %>" width="200" height="200">
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                          <a href="/admin/delete-image/<%= image.getId() %>" class="btn btn-danger" role="button">Yes, delete</a>
                        </div>
                      </div>
                    </div>
                  </div>
                </tr>
              <% }) %>
              
           
          </tbody>
        </table>
        
    </div>
</body>