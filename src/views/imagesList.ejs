<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Selwyn Swim Club</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Spicy+Rice&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
    <link href="/webfonts/all.css" rel="stylesheet">   
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.2/animate.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Quicksand&display=swap" rel="stylesheet">
    <link rel="shortcut icon" href="/images/logodrops.png"/>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="text-center">
      <a href="/"><img class="img-logo mt-2 mb-2" src="/images/logo.png" alt="Selwyn"></a>
    </div>
    <hr>

    <div class="container info-container pt-5">
      <div class="d-flex justify-content-end">
        <a href="/logout" class="btn btn-light btn-lg active mb-4" role="button">Logout</a><br />
      </div>
        <h2>Images: </h2>
        <a href="/admin/add-image" class="btn btn-success btn-lg active mt-4 mb-4" role="button">Add new image</a><br />
        <table class="table table-striped">
          <tbody>
            <% images.forEach(function(image){ %>
                <tr>
                  <td class="h5"><%= image.getName() %></td>
                  <td class="h5"><img src="<%= image.getPath() %>" width="200" height="200"></td>
                  <td class="text-right"><a href="#" class="btn btn-danger btn-lg active"
                     data-toggle="modal" data-target="#exampleModal<%= image.getId() %>" role="button">Delete</a></td>    
                  <div class="modal fade" id="exampleModal<%= image.getId() %>"  tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="exampleModalLabel">DELETE CONFIRMATION</h5>
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                          </button>
                        </div>
                        <div class="modal-body">
                          <p>Are you sure you want to delete <%= image.getName() %>?</p>
                          <img src="<%= image.getPath() %>" width="200" height="200">
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                          <a href="/admin/delete-image/<%= image.getId() %>" class="btn btn-danger" role="button">Yes, delete</a>
                        </div>
                      </div>
                    </div>
                  </div>
                </tr>
              <% }) %>
              
           
          </tbody>
        </table>
        
    </div>
</body>